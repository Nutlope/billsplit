generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

generator json {
  provider = "prisma-json-types-generator"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Bill {
  billSlug  String   @id
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  resturantName String?
  billDate      DateTime?

  /// [BillItem]
  billItems Json[]

  subTotal   Int?
  totalTaxes Int?

  tip Int?

  /// [People]
  people Json[]
}
